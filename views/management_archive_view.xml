<odoo>
    <data>
        <record id="view_management_archive_search" model="ir.ui.view">
            <field name="name">management.archive.select</field>
            <field name="model">management.archive</field>
            <field name="arch" type="xml">
                <search string="Search Archives">
                    <field name="issue_date"/>
                    <field name="name"/>
                    <field name="transaction_id"/>
                    <field name="transaction_type"/>
                    <field name="state"/>
                    <field name="partner_id"/>
                    <field name="signature_key"/>
                    <group expand="0" string="Group By">
                        <filter string="issue_date" name="group_by_Issue_Date" context="{'group_by':'issue_date'}"/>
                        <filter string="name" name="group_by_Document_Number" context="{'group_by':'name'}"/>
                        <filter string="transaction_type" name="group_by_Transaction_Type"
                                context="{'group_by':'transaction_type'}"/>
                        <filter string="state" name="group_by_state" context="{'group_by':'state'}"/>
                        <filter string="partner_id" name="group_by_Customer" context="{'group_by':'partner_id'}"/>
                        <filter string="signature_key" name="group_by_signature_key"
                                context="{'group_by':'signature_key'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_transaction_type_form" model="ir.ui.view">
            <field name="name">transaction.type.form</field>
            <field name="model">transaction.type</field>
            <field name="arch" type="xml">
                <form string="Transaction Types">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <group row="2">
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="name"/>
                                <field name="sequence_id" groups="base.group_no_one"/>
                                <field name="sequence_code"/>
                            </group>
                            <field name="notes" placeholder="Notes ..."/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_transaction_type_list" model="ir.ui.view">
            <field name="name">transaction.type.list</field>
            <field name="model">transaction.type</field>
            <field name="arch" type="xml">
                <tree string="Transaction Types">
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>

        <record id="action_transaction_type_list" model="ir.actions.act_window">
            <field name="name">Transaction Types</field>
            <field name="res_model">transaction.type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Transaction
                </p>
                <p>
                    Transactions allow you to Create New archive type.
                </p>
            </field>
        </record>

        <!--        <record id="transaction_type_action_tree" model="ir.ui.view">-->
        <!--            <field name="name">Transaction Types></field>-->
        <!--            <field name="model">transaction.type</field>-->
        <!--            <field name="arch" type="xml">-->
        <!--                <tree string="" editable="top">-->
        <!--                    <field name="name"/>-->
        <!--                    <field name="note"/>-->
        <!--                    <field name="active"/>-->
        <!--                </tree>-->
        <!--            </field>-->
        <!--        </record>-->

        <record id="signature_tree" model="ir.ui.view">
            <field name="name">Signature Keys></field>
            <field name="model">management.signature.key</field>
            <field name="arch" type="xml">
                <tree string="" editable="top">
                    <field name="name"/>
                    <field name="note"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record id="transaction_type_action" model="ir.actions.act_window">
            <field name="name">Transaction Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">transaction.type</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="signature_action" model="ir.actions.act_window">
            <field name="name">Signatures</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">management.signature.key</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="archive_transactions_action" model="ir.actions.act_window">
            <field name="name">Archiving Overview</field>
            <field name="res_model">transaction.type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Archive type
                </p>
                <p>
                    The Archive type system allows you to create various archive type.
                </p>
            </field>
        </record>

        <record id="archive_view_form" model="ir.ui.view">
            <field name="name">Archive Form View</field>
            <field name="model">management.archive</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button class="oe_highlight" name="action_approve" states="draft" type="object"
                                groups="management_archive.archive_manager" string="Approve"/>
                        <button class="oe_highlight" name="action_followup" states="followup" type="object"
                                groups="management_archive.archive_manager" string="Follow-up"/>
                        <button class="oe_highlight" name="action_request_response" states="reqresponse" type="object"
                                groups="management_archive.archive_manager" string="Request Response"/>
                        <button class="oe_highlight" name="action_close" states="closed" type="object"
                                groups="management_archive.archive_manager" string="Close"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h3>
                                <field name="name" readonly="1"/>
                            </h3>
                            <label for="subject" class="oe_edit_only"/>
                            <h1>
                                <field name="subject" placeholder="subject ..."
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </h1>
                        </div>

                        <!--                        <div class="oe_title">-->
                        <!--                            <h1>-->
                        <!--                                <field name="name" readonly="1"/>-->
                        <!--                            </h1>-->
                        <!--                        </div>-->
                        <group row="2">
                            <group>
                                <field name="transaction_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="partner_id"/>
                                <field name="form_kanban" invisible="1"/>
                                <field name="transaction_type" attrs="{'invisible':[('form_kanban', '=', True)]}"/>
                                <field name="signature_key" attrs="{'readonly': [('state', '!=', 'draft')]}"/>

                                <field name="signature_desc" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                                <field name="priority" widget="priority"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="issue_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="signature_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="default_description"/>
                            </page>
                            <page string="Attachment">
                                <field name="doc_attachment_id" widget="many2many_binary" class="oe_inline"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="archive_view_tree" model="ir.ui.view">
            <field name="name">Archiving Management Tree</field>
            <field name="model">management.archive</field>
            <field name="arch" type="xml">
                <tree string="archive tree">
                    <field name="name"/>
                    <field name="transaction_type"/>
                    <field name="partner_id"/>
                    <field name="subject"/>
                    <field name="signature_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="archive_management_action" model="ir.actions.act_window">
            <field name="name">Transaction</field>
            <field name="res_model">management.archive</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                   (0, 0, {'view_mode': 'tree', 'view_id': ref('archive_view_tree')}),
                   (0, 0, {'view_mode': 'form', 'view_id': ref('archive_view_form')}),
                   ]"/>
        </record>

        <record id="action_picking_tree_draft" model="ir.actions.act_window">
            <field name="name">Draft</field>
            <field name="res_model">management.archive</field>
            <field name="type">ir.actions.act_window</field>
            <field name="domain">[('state','=','draft')]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                   (0, 0, {'view_mode': 'tree', 'view_id': ref('archive_view_tree')}),
                   (0, 0, {'view_mode': 'form', 'view_id': ref('archive_view_form')}),
                   ]"/>
        </record>
        <record id="action_picking_tree_done" model="ir.actions.act_window">
            <field name="name">Draft</field>
            <field name="res_model">management.archive</field>
            <field name="type">ir.actions.act_window</field>
            <field name="domain">[('state','=','done')]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                   (0, 0, {'view_mode': 'tree', 'view_id': ref('archive_view_tree')}),
                   (0, 0, {'view_mode': 'form', 'view_id': ref('archive_view_form')}),
                   ]"/>
        </record>
        <record id="action_picking_tree_followup" model="ir.actions.act_window">
            <field name="name">Draft</field>
            <field name="res_model">management.archive</field>
            <field name="type">ir.actions.act_window</field>
            <field name="domain">[('state','=','followup')]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                   (0, 0, {'view_mode': 'tree', 'view_id': ref('archive_view_tree')}),
                   (0, 0, {'view_mode': 'form', 'view_id': ref('archive_view_form')}),
                   ]"/>
        </record>
        <record id="action_picking_tree_reqresponse" model="ir.actions.act_window">
            <field name="name">Draft</field>
            <field name="res_model">management.archive</field>
            <field name="type">ir.actions.act_window</field>
            <field name="domain">[('state','=','reqresponse')]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                   (0, 0, {'view_mode': 'tree', 'view_id': ref('archive_view_tree')}),
                   (0, 0, {'view_mode': 'form', 'view_id': ref('archive_view_form')}),
                   ]"/>
        </record>
        <record id="action_picking_tree_close" model="ir.actions.act_window">
            <field name="name">Draft</field>
            <field name="res_model">management.archive</field>
            <field name="type">ir.actions.act_window</field>
            <field name="domain">[('state','=','close')]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                   (0, 0, {'view_mode': 'tree', 'view_id': ref('archive_view_tree')}),
                   (0, 0, {'view_mode': 'form', 'view_id': ref('archive_view_form')}),
                   ]"/>
        </record>


        <record id="transaction_type_kanban" model="ir.ui.view">
            <field name="name">transaction.type.kanban</field>
            <field name="model">transaction.type</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_emphasize_colors o_stock_kanban" create="0">
                    <field name="name"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card">
                                <span class="oe_kanban_color_help"
                                      t-attf-title="In #{kanban_getcolorname(record.color.raw_value)}" role="img"
                                      t-attf-aria-label="In #{kanban_getcolorname(record.color.raw_value)}"/>
                                <div class="o_kanban_card_header">
                                    <!--                                    <div class="o_primary o_kanban_record_title">-->
                                    <!--                                        <field name="name"/>-->
                                    <!--                                    </div>-->
                                    <div class="o_primary" t-if="!selection_mode">
                                        <a type="object" name="get_archive">
                                            <h3>
                                                <field name="name"/>
                                            </h3>
                                        </a>
                                    </div>
                                    <!--                                    <div class="o_secondary">-->
                                    <!--                                        <field name="archive_count"/>-->
                                    <!--                                    </div>-->

                                </div>
                                <div class="container o_kanban_card_content" t-if="!selection_mode">
                                    <div class="row">
                                        <div class="col-6 o_kanban_primary_right">
                                            <button class="btn btn-primary" name="action_view_archive_ids"
                                                    type="object">
                                                <span>
                                                    <field name="archive_count"/>
                                                    Archive
                                                </span>
                                            </button>

                                        </div>
                                        <div class="col-6 o_kanban_primary_left">
                                            <div t-if="record.count_draft.raw_value &gt; 0" class="row">
                                                <div class="col-9">
                                                    <a name="get_action_picking_tree_draft" type="object">
                                                        Draft
                                                    </a>
                                                </div>
                                                <div class="col-3">
                                                    <field name="count_draft"/>
                                                </div>
                                            </div>
                                            <div t-if="record.count_done.raw_value &gt; 0" class="row">
                                                <div class="col-9">
                                                    <a name="get_action_picking_tree_done" type="object">
                                                        Done
                                                    </a>
                                                </div>
                                                <div class="col-3">
                                                    <field name="count_done"/>
                                                </div>
                                            </div>
                                            <div t-if="record.count_followup.raw_value &gt; 0" class="row">
                                                <div class="col-9">
                                                    <a name="get_action_picking_tree_followup" type="object">
                                                        FollowUP
                                                    </a>
                                                </div>
                                                <div class="col-3">
                                                    <field name="count_followup"/>
                                                </div>
                                            </div>
                                            <div t-if="record.count_reqresponse.raw_value &gt; 0" class="row">
                                                <div class="col-9">
                                                    <a name="get_action_picking_tree_reqresponse" type="object">
                                                        Request Response
                                                    </a>
                                                </div>
                                                <div class="col-3">
                                                    <field name="count_reqresponse"/>
                                                </div>
                                            </div>
                                            <div t-if="record.count_closed.raw_value &gt; 0" class="row">
                                                <div class="col-9">
                                                    <a name="get_action_picking_tree_close" type="object">
                                                        Closed
                                                    </a>
                                                </div>
                                                <div class="col-3">
                                                    <field name="count_closed"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>